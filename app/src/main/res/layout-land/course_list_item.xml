<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:id="@+id/courseLineItem"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#DF9B81"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textViewCourseName"
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center|start"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="#00881E1E"
            android:gravity="center"
            android:paddingEnd="40dp"
            android:text=">"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/courseStatusLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DF9B81"
        android:orientation="horizontal"
        android:paddingStart="35dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@+id/courseLineItem"
        tools:layout_editor_absoluteX="304dp">


        <TextView
            android:id="@+id/textViewCourseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Course Status" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/courseStatusLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>